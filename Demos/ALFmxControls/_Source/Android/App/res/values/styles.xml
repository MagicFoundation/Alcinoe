<?xml version="1.0" encoding="utf-8"?>
<resources>
 
  <!-- Default datePicker Dialog Theme -->
  <style name="AppThemeDatePickerDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
    <item name="android:datePickerStyle">@style/AppThemeDatePickerStyle</item>
    <item name="android:colorAccent">#ff0288d1</item>
    <item name="android:colorControlNormal">#ff6bc6e7</item>
  </style>
 
  <!-- Default datePicker Style -->
  <style name="AppThemeDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
    <item name="android:datePickerMode">spinner</item>
  </style>

  <!-- Default EditText Style -->

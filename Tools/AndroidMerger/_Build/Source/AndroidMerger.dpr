                (ALPosW(LLocalMavenRepositoryDir, LLibraryArchiveFileName) <> 1))  or
               ((LPomFileName <> '') and
                (ALPosW(LLocalMavenRepositoryDir, LPomFileName) <> 1)) then begin
              Var LRepositoryDirectory := LDependenciesWalkerTmpDir +
                                          'localrepository\' +

          end
          else begin
            if LLibraryArchiveFileName = '' then raise Exception.Create('Error 6AF219E0-8FDC-4C2A-A112-BBFDB91B9580');
            if LPomFileName <> '' then raise Exception.Create('Error 6F7C2A3E-76E2-44A6-A2D5-D0BCA4C2F1EA');

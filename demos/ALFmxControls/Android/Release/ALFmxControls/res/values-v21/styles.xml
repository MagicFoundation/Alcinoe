<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<resources>

 
  <!-- EditText on a blue background -->
  <style name="BlueBGTextView" parent="@android:style/Widget.Material.Light.EditText">
    <item name="android:background">@null</item>   
    <item name="android:textCursorDrawable">@null</item> 
    <item name="android:textColorHighlight">#66ffffff</item>
    <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl_alpha</item>
    <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl_alpha</item>
    <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl_alpha</item>
    <item name="alfloatingToolbarStyle">@style/al_floating_toolbar_light</item>
  </style>

  <!-- default EditText -->
  <style name="AppThemeEditTextStyle" parent="@android:style/Widget.Material.Light.EditText">
    <item name="android:background">@null</item> 
    <item name="android:textColorHighlight">#ff9acfed</item>
  </style>
 
  <!-- default Theme -->
  <style name="AppTheme" parent="@android:style/Theme.Material.Light.NoActionBar"> 
    <item name="android:editTextStyle">@style/AppThemeEditTextStyle</item>
    <item name="android:colorAccent">#ff0288d1</item>
    <item name="@attr/BlueBGTextViewStyle">@style/BlueBGTextView</item>
    <item name="alfloatingToolbarStyle">@style/al_floating_toolbar_dark</item>
  </style>
        

</resources>
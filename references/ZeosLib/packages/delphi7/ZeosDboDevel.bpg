  $(DCC)

ZDbc.bpl: ZDbc.dpk
  $(DCC)

ZTestDbcAll.exe: ZTestDbcAll.dpr
  $(DCC)

ZComponent.bpl: ZComponent.dpk
  $(DCC)

ZTestComponentAll.exe: ZTestComponentAll.dpr
  $(DCC)

ZTestCoreAll.exe: ZTestCoreAll.dpr
  $(DCC)

